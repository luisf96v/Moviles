<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="3.2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.64"
                android:gravity="center|right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/idEstudianteLabel"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="ID:"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/idEstudianteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="id"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center|right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nombreEstudianteLabel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Nombre:"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/nombreEstudianteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="nombre"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center|right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/apellido1EstudianteLabel"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="1er Apellido:"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/apellido1EstudianteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="1er apellido"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center|right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/apellido2EstudianteLabel"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="2do Apellido:"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/apellido2EstudianteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="2do apellido"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center|right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/edadEstudianteLabel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Edad:"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/edadEstudianteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="edad"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
            </LinearLayout>

                <TextView
                    android:id="@+id/cursosDeEstudiante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/cursos_estudiante"
                    android:textSize="14dp"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/colorPrimary"
                    />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.8"
            android:gravity="center|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editEstudiante"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/edit" />

            <ImageView
                android:id="@+id/deleteEstudiante"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/remove" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>