<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/cursosMantenimiento"
        android:layout_width="120dip"
        android:layout_height="120dip"
        android:padding="@dimen/icon_padding"
        android:src="@drawable/book"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/botonCrudCursos"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/botonCrudEstudiantes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Mantenimiento de Cursos" />

    <ImageView
        android:id="@+id/estudiantesMantenimiento"
        android:layout_width="120dip"
        android:layout_height="120dip"
        android:padding="@dimen/icon_padding"
        android:src="@drawable/student"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/botonCrudEstudiantes"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Mantenimiento de Estudiantes" />


</LinearLayout>
