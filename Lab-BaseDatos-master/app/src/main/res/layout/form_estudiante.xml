<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context=".FormEstudianteActivity">

    <TextView
        android:id="@+id/estLabel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:padding="2dp"
        android:text="Datos del Estudiante:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/idEstLabel"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:text="ID:"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:gravity="center|left"/>
        <EditText
            android:id="@+id/idEstudiante"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="digite la cedula"
            android:inputType="number"
            android:textSize="@dimen/text_size"
            android:gravity="center|left"
            android:maxLength="9"
            android:maxLines="1"
            android:singleLine="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nomEstLabel"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:text="Nombre:"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:gravity="center|left"/>

        <EditText
            android:id="@+id/nombreEstudiante"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="digite el nombre"
            android:inputType="textPersonName"
            android:textSize="@dimen/text_size"
            android:gravity="center|left"
            android:maxLength="25"
            android:maxLines="1"
            android:singleLine="true"
            android:digits="ABCDEFGHIJKLMNÑOPQRSTUVWXYZabcdefghijklmnñopqrstuvwxyz "
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ape1Label"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:text="1er Apellido:"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:gravity="center|left" />

        <EditText
            android:id="@+id/apellido1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:gravity="center|left"
            android:hint="digite el 1er apellido"
            android:inputType="textPersonName"
            android:textSize="@dimen/text_size"
            android:maxLength="25"
            android:maxLines="1"
            android:singleLine="true"
            android:digits="ABCDEFGHIJKLMNÑOPQRSTUVWXYZabcdefghijklmnñopqrstuvwxyz "
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ape2Label"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:text="2do Apellido:"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:gravity="center|left" />

        <EditText
            android:id="@+id/apellido2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:gravity="center|left"
            android:hint="digite el 2do apellido"
            android:inputType="textPersonName"
            android:textSize="@dimen/text_size"
            android:maxLength="25"
            android:maxLines="1"
            android:singleLine="true"
            android:digits="ABCDEFGHIJKLMNÑOPQRSTUVWXYZabcdefghijklmnñopqrstuvwxyz "
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/edadLabel"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:text="Edad:"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:gravity="center|left"/>

        <EditText
            android:id="@+id/edad"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:gravity="center|left"
            android:hint="digite la edad"
            android:inputType="number"
            android:textSize="@dimen/text_size"
            android:maxLength="3"
            android:maxLines="1"
            android:singleLine="true"
            />
    </LinearLayout>

    <Button
        android:id="@+id/guardarEstudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Guardar" />


</LinearLayout>