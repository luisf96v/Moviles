<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context=".FormCursoActivity">

    <TextView
        android:id="@+id/curLabel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:padding="2dp"
        android:text="Datos del Curso:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/idCurLabel"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:text="ID:"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:gravity="center|left"/>
        <TextView
            android:id="@+id/idCurso"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="2dp"
            android:text="id"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:gravity="center|left"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nomCurLabel"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:text="Nombre:"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:gravity="center|left"/>

        <EditText
            android:id="@+id/nombreCurso"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="digite el nombre"
            android:inputType="textPersonName"
            android:textSize="@dimen/text_size"
            android:gravity="center|left"
            android:maxLength="25"
            android:maxLines="1"
            android:singleLine="true"
            android:digits="ABCDEFGHIJKLMNÑOPQRSTUVWXYZabcdefghijklmnñopqrstuvwxyz "
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/descripCurLabel"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:text="Descripción:"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:gravity="center|left" />

        <EditText
            android:id="@+id/descripcion"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:gravity="center|left"
            android:hint="digite la descripción"
            android:inputType="textLongMessage"
            android:textSize="@dimen/text_size"
            android:maxLines="1"
            android:singleLine="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/credCurLabel"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:text="Créditos:"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:gravity="center|left"/>

        <EditText
            android:id="@+id/creditos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:gravity="center|left"
            android:hint="digite los créditos"
            android:inputType="number"
            android:textSize="@dimen/text_size"
            android:maxLines="1"
            android:singleLine="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/estText"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:text="Estudiante:"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:gravity="center|left"/>

        <CheckBox
            android:id="@+id/selectOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/guardarCurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Guardar" />


</LinearLayout>