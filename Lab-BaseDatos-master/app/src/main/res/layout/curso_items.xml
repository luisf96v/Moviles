<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="3.2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.64"
                android:gravity="center|right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/idCursoLabel"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="ID:"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/idCursoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="id"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center|right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nombreCursoLabel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Nombre:"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/nombreCursoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Nombre"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center|right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/descripcionCursoLabel"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Descripción:"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/descripcionCursoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Descripcion"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center|right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/creditosCursoLabel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Créditos:"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/creditosCursoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Creditos"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center|right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/estCurText"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Estudiante:"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/estudianteCurso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Estudiante"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.8"
            android:gravity="center|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editCurso"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/edit" />

            <ImageView
                android:id="@+id/deleteCurso"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/delete" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>